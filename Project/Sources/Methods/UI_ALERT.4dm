  //%attributes = {"folder":"Utility","lang":"en"} comment added and reserved by 4D.  //  UI_alert (text{;text})  // $1: message  // $2: icon  // Written by: Kirk as Designer, Created: 01/03/20, 20:47:09  // ------------------  // Purpose: C_TEXT($1;$message;$2;$icon)C_OBJECT($form_obj)C_LONGINT($form_width)C_LONGINT($left;$top;$right;$bottom;$height;$width;$type;$padLeft;$window)$message:=$1Case of 	: (Count parameters<2)			: ($2="warn")		$icon:="warning.svg"	: ($2="info")		$icon:="info.svg"	: ($2="??")		$icon:="question4.svg"	Else 		$icon:=$2End case   // --------------------------------------------------------If (Length($message)>0)	$form_obj:=New object("message";$message;"icon";$icon)		GET WINDOW RECT($left;$top;$right;$bottom;$window)		  // --------------------------------------------------------	  // min win width is 515	$form_width:=515	$width:=$right-$left		If ($width>$form_width)  //  center the window in the current window		$padLeft:=($width-$form_width)\2	End if 		  // --------------------------------------------------------	$top:=0	$left:=$left+$padLeft		$right:=$left+$form_width	$bottom:=$top+126		  // --------------------------------------------------------		If (Is Windows)		$type:=Modal dialog	Else   //  use the sheet window		$type:=Sheet window	End if 		$window:=Open window($left;$top;$right;$bottom;$type)	DIALOG("UI_dlog";$form_obj)	CLOSE WINDOW($window)	End if 